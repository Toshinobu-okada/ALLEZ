<div class="tab_wrap">
  <input id="tab1" type="radio" name="tab_btn" checked>
  <input id="tab2" type="radio" name="tab_btn">
  <input id="tab3" type="radio" name="tab_btn">

  <div class="tab_area">
    <label class="tab_label" for="tab1">検索結果一覧</label>
    <label class="tab_label" for="tab2">最新ツイート</label>
    <label class="tab_label" for="tab3">話題のツイート</label>
  </div>
  <div class="panel_area">
    <div id="panel1" class="tab_panel">
      <span class='container'>
        <span class='index-container d-block d-inline-block'>
          <h1>検索結果一覧</h1>
            <div class="mt-3"><%= paginate @searched_post_images %></div>
              <span class="d-flex flex-wrap justify-content-center">
                <% @searched_post_images.each do |searched_post_image| %>
                <div class="card d-inline-block m-2">
                  <div>
                    <%= link_to post_image_path(searched_post_image.id) do %>
                      <div class="card-image-top">
                        <%= attachment_image_tag searched_post_image, :image, class:"img" %>
                      </div>
                    <% end %>
                    <div class="card-body">
                      <div class="d-inline-block mb-2">
                        <i class="far fa-heart"><%= searched_post_image.likes_count %></i>
                        <i class="far fa-comment"><%= searched_post_image.post_comments.count %></i>
                      </div>
                      <div class="card-title">
                        <%= link_to user_path(searched_post_image.user), class:"edit-link text-color-black" do %>
                        <div class="d-inline-block">
                          <%= attachment_image_tag searched_post_image.user, :profile_image, :fill, 40, 40, fallback: "no_image.jpg", size: '40x40' %>
                        </div>
                        <div class="d-inline-block font-weight-bold">
                          <%= searched_post_image.user.name %>
                        </div>
                        <% end %>
                      </div>
                      <div>
                        <p class="card-text", style="border: solid; border-radius:25px; padding: 5px; margin: 5px;"><%= searched_post_image.share_comment %></p>
                      </div>
                      <div class="card-tag">
                        <% searched_post_image.tags.each do |tag| %>
                          <%= link_to search_path(search: tag.hash_tag), class:"edit-link text-color-black" do %>
                            <p class="card-tag-link d-inline-block", style="border: solid 1px; border-radius:5px; padding: 5px; margin: 5px;"><%= tag.hash_tag %></p>
                          <% end %>
                        <% end %>
                      </div>
                    </div>
                  </div>
                </div>
                <% end %>
              </span>
            </div>
          <div class="mt-2"><%= paginate @searched_post_images %></div>
        </span>
      </span>

