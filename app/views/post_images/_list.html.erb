<%= paginate post_images %>
<div class="card-deck">
  <div class="card list-card">
    <% post_images.each do |post_image| %>
    <div>
      <%= link_to post_image_path(post_image.id) do %>
        <divã€€class="img card-img-top">
          <%= attachment_image_tag post_image, :image %>
        </div>
      <% end %>
      <div class="card-body">
        <div class="d-block card-title">
          <div class="d-inline-block">
            <%= attachment_image_tag post_image.user, :profile_image, :fill, 60, 60, fallback: "no_image.jpg" %>
          </div>
          <div class="d-inline-block">
            <%= post_image.user.name %>
          </div>
        </div>
        <div class="d-block">
          <p class="card-text"><%= post_image.share_comment %></p>
        </div>
        <div class="card-tag">
          <% post_image.tags.each do |tag| %>
            <p class="card-tag-link"><%= link_to tag.hash_tag, search_path(search: tag.hash_tag) %></p>
          <% end %>
        </div>
      </div>
    </div>
    <% end %>
  </div>
</div>
<%= paginate post_images %>