<span class='container'>
  <span class='index-container d-block d-inline-block'>
    <div class="mt-3"><%= paginate post_images %></div>
    <span class="d-flex flex-wrap justify-content-center">
      <% post_images.each do |post_image| %>
      <div class="card d-inline-block m-2">
        <div>
          <%= link_to post_image_path(post_image.id) do %>
            <div class="card-image-top">
              <%= attachment_image_tag post_image, :image, class:"img" %>
            </div>
          <% end %>
          <div class="card-body">
            <div class="card-title">
              <div class="d-inline-block">
                <%= attachment_image_tag post_image.user, :profile_image, :fill, 40, 40, fallback: "no_image.jpg", size: '40x40' %>
              </div>
              <div class="d-inline-block font-weight-bold">
                <%= post_image.user.name %>
              </div>
            </div>
            <div>
              <p class="card-text"><%= post_image.share_comment %></p>
            </div>
            <div class="card-tag">
              <% post_image.tags.each do |tag| %>
                <p class="card-tag-link d-inline-block"><%= link_to tag.hash_tag, search_path(search: tag.hash_tag) %></p>
              <% end %>
            </div>
          </div>
        </div>
      </div>
      <% end %>
    </span>
    <div class="mt-2"><%= paginate post_images %></div>
  </span>
</span>