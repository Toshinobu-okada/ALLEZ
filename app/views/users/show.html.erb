<span class='container'>
  <span class='index-container d-block d-inline-block'>
    <div class="profile-container">
      <h3 class="profile-name edit-link"><%= @user.name %></h3>
      <%= attachment_image_tag @user, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg" %>
      <% if @user.id == current_user.id %>
        <p><%= link_to "プロフィール編集", edit_user_path(@user), class:"fas fa-user-edit fa-lg outline edit-link" %></p>
      <% end %>
    </div>
    <%= render 'post_images/list', post_images: @post_images, tag: @tag %>
  </span>
</span>